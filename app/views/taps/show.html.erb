<h1>Tap name: <%= @tap.name %></h1>
<h3>Size: <%= @tap.size %></h3>
<h3>Made in <%= @tap.made_in %></h3>

<%= button_to "Edit Tap", 
              edit_tap_path(@tap),
              method: :get %>
<%= button_to "Delete Tap", 
              tap_path(@tap),
              method: :delete %> 
<%= button_to "Return to Taps Page", 
              taps_path,
              method: :get %>