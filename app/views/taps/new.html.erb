<h1>New Tab</h1>
<%# @tap = tap from database %>


<%= form_for @tap do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :size %>
  <%= f.number_field :size %>
  <%= f.label :made_in %>
  <%= f.text_field :made_in %>
  <%= f.submit  %>
<% end %>
<% if @tap.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @tap.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>