<h1>Taps: </h1>

<% if @taps.any? %>
  <ul>
    <% @taps.each do |tap| %>
      <li><%= link_to tap.id, tap_path(tap) %> <%= tap.tap_style%> </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no taps yet.</p>
<% end %>

<%if is_admin? %>
  <%= button_to "Create new tap", 
                new_tap_path,
                method: :get %>
<% end %>