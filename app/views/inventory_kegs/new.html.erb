<h1>New keg</h1>

<%= form_for @inv_keg do |f| %>
  <%= f.label :brand %>
  <%= f.text_field :brand %>
  <%= f.label :brewery %>
  <%= f.text_field :brewery %>
  <%= f.label :date_received %>
  <%= f.date_field :date_received %>
   <%= f.label :priority %>
  true
  <%= f.radio_button :priority, "true" %>
  false
  <%= f.radio_button :priority, "false" %>
   <%= f.label :abv %>
  <%= f.number_field :abv , in: 0..20.0, step: 0.1 %>
   <%= f.label :price %>
  <%= f.number_field :price , in: 50.0..400 , step: 50%>
   <%= f.label :serving_size %>
  <%= f.number_field :serving_size %>
   <%= f.label :date_tapped %>
  <%= f.date_field :date_tapped %>
   <%= f.label :serving_price %>
  <%= f.number_field :serving_price, in: 1.0..20.0, step: 0.5 %>
   <%= f.label :keg_size %>
  <%= f.number_field :keg_size %>
  <%= f.submit  %>
<% end %>


<% if @inv_keg.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @inv_keg.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>